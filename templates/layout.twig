<!DOCTYPE html>
<html>
<head>
    <title>{$pageTitle}</title>
    <!--<meta http-equiv="Content-Language" content="fr" />-->
    <meta charset="utf-8" />
    <meta name="robots" content="noindex, nofollow" />
    <meta name="description" content="{$lngBwDesciption}" />

    <link rel="stylesheet" type="text/css" href="{{ thmasset('css/general.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ thmasset('css/jquery-ui.min.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ thmasset('css/jquery-ui-adjust.css') }}" />
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />

    <script src="{{ asset('js/jquery.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/jquery-ui.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/tools.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/common.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/functions.js') }}" type="text/javascript"></script>
</head>

<body>
<div id="flash_message" class="ui-widget">
    <div class="ui-state-error ui-corner-all" style="padding: 0pt 0.7em;">
        <p><span class="ui-icon ui-icon-alert floatingIcon"></span></p>
    </div>
</div>
<div id="global" class="ui-widget">
    <div id="header">
        <h1>{$siteName}</h1>
        <br /><h2>{$subTitle}</h2><br />
    </div>
    <div id="content">
        <div id="left_menu" class="ui-widget-content ui-corner-all" style="padding: 0.2em;">
            {% if sessOK %}
            <h2><a href="{{ url('homepage') }}">{% trans %}home{% endtrans %}</a></h2>
            {% else %}
            <h2><a href="{{ url('homepage') }}">{% trans %}homeLogin{% endtrans %}</a></h2>
            {% endif %}
            {% if lists is defined and not lists is empty %}
            <h2>{% trans %}lists{% endtrans %}</h2>
            <ul>
                {foreach from=$lists item=list}
                <li><a href="{$webDir}/list/{$list->slug}">{$list->name|ucfirst}</a>
                </li>
                {/foreach}
            </ul>
            {% endif %}
            {% if sessOK %}
            <h2><a href="{{ url('options') }}">{% trans %}options{% endtrans %}</a></h2>
            <h2><a href="{{ url('logout') }}">{% trans %}logout{% endtrans %}</a></h2>
            {% endif %}
        </div>
        <div id="right_content" class="ui-widget-content ui-corner-all" style="padding: 0.2em 6px;">
        {%  block content %}{% endblock %}
            {% if sessOK %}
            <p class="smaller">
                <i><br />{$lngConnectedAs}
                    <br /><a href="{{ url('logout') }}"><img src="{{ thmasset('img/logout.png') }}" alt="" class="icon_text" /> {% trans %}options{% endtrans %}</a>
                    <br /><a href="{{ url('options') }}"><img src="{{ thmasset('img/options.png') }}" alt="" class="icon_text" /> {% trans %}logout{% endtrans %}</a>
                </i>
            </p>
            {% endif %}
        </div>
    </div>
    <br /><br /><br />
    <br style="clear: both" />
    <div id="footer">
        Powered by <a target="_blank" href="https://github.com/kissifrot/BestWishes">BestWishes</a> {{ app.version }} - <a href="{$webDir}/admin/">Admin</a>
    </div>
    {% block javascripts %}
    <script type="text/javascript">
        // <![CDATA[
        $(document).ready(function() {
            posTopMenu = $('#left_menu').offset();
            $('#left_menu').css('position', 'absolute');
        });
        $(window).scroll(function() {
            var scrollTop = $(this).scrollTop();
            if(posTopMenu != null) {
                if(scrollTop <= posTopMenu.top)
                    $('#left_menu').css('top', scrollTop + posTopMenu.top + 'px');
                else
                    $('#left_menu').css('top', scrollTop + 'px');
            }
            else
                $('#left_menu').css('top', $(this).scrollTop() + 'px');
        });
        // ]]>
    </script>
    {% endblock %}
</div>
</body>
</html>